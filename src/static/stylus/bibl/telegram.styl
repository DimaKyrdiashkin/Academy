.telegram
  margin 120px 0 0

  & h2
    margin-bottom 20px

  & .subTitle
    text-align center
    margin 0 0 80px

  &_box
    display flex
    flex-direction column

    &__item
      display flex
      align-items center
      background $Gray
      padding 30px 36px
      margin-bottom 32px
      border-radius 20px

      &>img
        margin-right 36px

@media all and (max-width 768px)
  .telegram
    margin 80px 0 0

    & .subTitle
      margin 0 0 52px

@media all and (max-width 560px)
  .telegram
    margin 90px 0 0

@media all and (orientation landscape) and (max-width 850px)
  .telegram
    margin 80px 0 0

    & .subTitle
      margin 0 0 64px