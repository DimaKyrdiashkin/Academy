.possibility
  margin 140px 0 180px

  &>img
    position absolute
    z-index -1
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width 70%
    max-width 730px
    user-select none

  & h2
    margin 0 0 20px

  & .subTitle
    text-align center
    margin-bottom 90px

  & .num
    display flex
    justify-content center
    align-items center
    border-radius 50%
    color $White
    width 48px
    height 48px
    background $Orange
    margin-bottom 60px
    user-select none

  &_box
    display flex
    justify-content space-between
    position relative

    &:after
      content ''
      display block
      background $Orange
      width 85%
      height 2px
      position absolute
      z-index -1
      top calc(48px / 2)
      left 50%
      transform translateX(-50%)

    &__item
      display flex
      flex-direction column
      align-items center
      text-align center
      max-width 210px

  &_button
    margin-top 80px
    display flex
    justify-content center
    user-select none

    &>a
      background $Purple
      font-weight 500
      display block
      padding 24px 36px
      text-align center
      border-radius 16px
      box-shadow 6px 9px 13px rgba(89, 85, 157, 0.33),
        0px 4px 6px rgba(89, 85, 157, 0.31)

@media all and (max-width 920px)
  .possibility
    margin 90px 0 120px

    &>img
      width 70%
      max-width 500px

    &_button
      margin-top 40px

    &_box
      flex-wrap wrap

      &:after
        display none

      &__item
        width 33%
        margin-bottom 48px

@media all and (max-width 768px)
  .possibility
    & .subTitle
      margin-bottom 52px

    &_button
      margin-top 52px

@media all and (max-width 560px)
  .possibility
    margin 50px 0 120px

    &>img
      display none

    & .num
      margin-bottom 24px

    &_box
      flex-direction column
      align-items center

      &__item
        width 100%
        margin-bottom 60px
        max-width 300px

    &_button
      margin-top 0

@media all and (orientation landscape) and (max-width 850px)
  .possibility
    margin 60px 0 100px

    &_button
      margin-top 20px