.modal
  position fixed
  z-index -1
  opacity 0
  transition .2s
  top 0
  width 100%
  height 100vh
  background rgba(0, 0, 0, 0.2)
  display none
  justify-content center
  align-items center

  &.open
    display flex
    z-index 99
    opacity 1

  &_box
    position absolute
    background #122861
    width 85%
    max-width 1200px
    border-radius 10px
    height fit-content !important
    padding 28px
    display none
    max-height 90%
    overflow-y auto !important

    &>p
      color #222222
      margin-bottom 20px
      margin-top 28px

    &>ul
      &>li
        color #ACACAC

    &__item
      display flex
      align-items center
      border 1px solid #FF8200
      border-radius 10px
      padding 68px 32px
      margin-bottom 20px

      &>img
        margin-right 46px
      
      & h5
        margin-bottom 20px
        margin-top 8px

    &.open
      display block

  &_workshop
    background #fff
    padding 28px
    max-height 90vh
    overflow-y auto
    
    &.blue
      background #122861 !important

    &>h4
      text-align center
      margin-bottom 40px

@media all and (max-width 560px)
  .modal
    &_box
      &__item
        padding 24px

        &>img
          display none

@media all and (orientation landscape) and (max-width 850px)
  .modal
    &_box
      &__item
        &>img
          display none