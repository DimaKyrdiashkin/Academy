.workshop
  & h2
    margin 0 auto 40px
    max-width 800px

  & .subTitle
    margin 0 auto 90px
    text-align center
    max-width 800px

  & h3
    text-align center
    margin-bottom 56px

  & .man
    display block
    margin 0 auto 92px

  &_box
    display flex
    justify-content center

    &__item
      max-width 136px
      width 20%
      text-align center
      display flex
      flex-direction column
      align-items center
      margin-right 60px

      &:last-child
        margin-right 0

      & .img-wrapper
        background $Gray
        border-radius 50%
        display flex
        width fit-content
        padding 22px
        margin-bottom 36px

        &>img
          display block

  &_button
    margin-top 72px
    display flex
    justify-content center
    user-select none

    &>span
      cursor pointer
      display flex
      justify-content center
      align-items center
      color $Black
      margin-right 24px
      max-width 360px
      width 50%
      text-align center
      padding 24px 0
      font-weight 500
      border-radius 16px
      
      &:first-child
        color $Yellow
        border 2px solid $Yellow
        box-shadow 6px 9px 13px rgba(253, 185, 0, 0.33),
          0px 4px 6px rgba(253, 185, 0, 0.31)

      &:last-child
        margin-right 0
        color $White
        background $Purple
        box-shadow 6px 9px 13px rgba(89, 85, 157, 0.33),
          0px 4px 6px rgba(89, 85, 157, 0.31)
        border 2px solid transparent

@media all and (max-width 1280px)
  .workshop
    &_box
      flex-wrap wrap

      &__item
        width 30%
        max-width 100%
        margin-right 30px
        margin-bottom 76px

        &:nth-child(3)
          margin-right 0

        &:nth-child(n+4)
          margin-bottom 0

@media all and (max-width 920px)
  .workshop
    & .man
      width 80%

    &_button
      flex-direction column
      align-items center

      &>span
        margin-right 0

        &:first-child
          margin-bottom 40px

@media all and (max-width 768px)
  .workshop
    &_box
      &__item
      &__item:nth-child(n+4)
        margin-right 0
        margin-bottom 44px

        &:last-child
          margin-bottom 0

@media all and (max-width 560px)
  .workshop
    & .subTitle
      margin 0 auto 52px
    &_box
      flex-direction column
      align-items center
    &_button
      &>span
        width 100%

@media all and (orientation landscape) and (max-width 850px)
  .workshop
    & .subTitle
      margin 0 auto 28px