.footer
  background #4D4B4B
  width 100%
  padding 50px 0
  margin 160px 0 0
  user-select none

  & .container
    &>img
      display none

  &_box
    display flex
    justify-content space-between

    &__item
      max-width 350px
      display flex
      align-items center

      &>a
        margin-right 20px
        
        &>img
          display block
      
      & .text
        &>p
          color $White
          margin-bottom 12px
      
        &>b
          color $White

@media all and (max-width 1440px)
  .footer
    padding 50px 68px

@media all and (max-width 920px)
  .footer
    &_box
      flex-direction column
      align-items center

      &__item
        margin-bottom 56px

        &:last-child
          margin-bottom 0

    & .container
      &>img
        display block
        margin 0 auto 56px

@media all and (max-width 560px)
  .footer
    padding 50px 28px
    margin 80px 0 0

@media all and (orientation landscape) and (max-width 850px)
  .footer
    margin 40px 0 0