.speaker
  margin 200px 0 0

  & .subTitle
    margin 0 auto 90px
    text-align center
    max-width 800px

  & h5
    margin-bottom 24px

  & .subtitle
    margin-bottom 60px
    max-width 600px

  & .list
    position relative

    &>ul
      max-width 600px

      &>li
        margin-bottom 10px

        &:last-child
          margin-bottom 0

    &>img
      position absolute
      right 0
      top 0
      transform translateY(-30%)
      width 43%
      
@media all and (max-width 920px)
  .speaker
    margin 120px 0 0

    &Title
      max-width 100%
      text-align center

    & .subTitle
      margin 0 auto 40px

    & h5
    & .subtitle
      text-align center
      max-width 100%

    & .subtitle
      margin 0 auto 40px

    & .list
      &>ul
        max-width 50%
        
      &>img
        top 50%
        transform translateY(-50%)

@media all and (max-width 768px)
  .speaker
    margin 90px 0 0

    & .subtitle
      max-width 600px
      margin 0 auto 60px

    & .list
      display flex
      flex-direction column

      &>ul
        max-width 100%

      &>img
        position unset
        transform translate(0, 0)
        order -1
        display block
        margin 0 auto 28px
        width 80%
        max-width 400px

@media all and (orientation landscape) and (max-width 850px)
  .speaker
    margin 100px 0 0

    &Title
      margin-bottom 40px