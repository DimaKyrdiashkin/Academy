.menu
  width 100%
  position fixed
  z-index 11
  top 0
  background $White
  transform translateY(-100%)
  transition 1s
  user-select none

  & .container
    border-left 1px solid rgba(18, 34, 134, 0.1)
    border-right 1px solid rgba(18, 34, 134, 0.1)
    min-height 100vh

    &>img
      position absolute
      left 50%
      top 12%
      transform translateX(-50%)
      width 95%
      z-index -1

  & .socLink
    display flex
    margin 0 auto
    width fit-content
    position relative
    z-index 2
    padding 10px 0

    &>li
      margin-right 72px

      &:last-child
        margin-right 0

      &>a
        &>img
          display block
          height 32px

  &_box
    display flex
    justify-content space-between
    max-width 950px
    padding 300px 0 120px
    margin 0 auto
    position relative

    & a
      color $DBlue

    &:before
      content ''
      display block
      width 1px
      height 335px
      background rgba(18, 34, 134, 0.1)
      position absolute
      bottom 120px
      left 50%
      transform translateX(-50%)

    &__left
      &>li
        margin-bottom 53px

        &:last-child
          margin-bottom 0

    &__right
      &>li
        display flex
        align-items center
        margin-bottom 44px

        &:last-child
          margin-bottom 0

        &>img
          margin-right 20px

  &Button
    position fixed
    z-index 10
    background $Yellow
    padding 14px 60px
    border-radius 0 0 20px 20px
    cursor pointer
    user-select none
    box-shadow 0px 25px 40px -20px rgba(18, 40, 97, 0.2)

    & p
      color $DBlue
      letter-spacing 2px

  & .close
    position absolute
    z-index 12
    left 50%
    top 0
    transform translateX(-50%)
    background $DBlue
    padding 14px 60px
    border-radius 0 0 20px 20px
    cursor pointer
    user-select none
    box-shadow 0px 25px 40px -20px rgba(18, 40, 97, 0.2)

    &>p
      color $White
      letter-spacing 2px

@media all and (max-width 1280px)
  .menu
    padding 0 68px

    &_box
      padding 200px 20px 100px

@media all and (max-width 560px)
  .menu
    padding 0
    max-height 100vh
    overflow hidden

    &::before
      content ''
      display block
      position absolute
      bottom 0
      left 0
      z-index 1
      width 100%
      height 20%
      background linear-gradient(180deg, rgba(255, 255, 255, .7) 0%, #FFFFFF 100%)

    &_box
      flex-direction column
      align-items center
      overflow auto
      max-height 75vh
      padding 45% 20px 25%

      &::before
        display none

      &__left
        padding-bottom 44px
        border-bottom 1px solid rgba(18, 40, 97, 0.1)
        &>li
          margin-bottom 36px

      &__right
        padding-top 44px
        &>li
          margin-bottom 28px

@media all and (orientation landscape) and (max-width 850px)
  .menu
    padding 0
    max-height 100vh
    overflow hidden

    &::before
      display none

    &_box
      align-items center
      overflow auto
      max-height 60vh
      padding 125px 20px 50px

      &::before
        display none

      &__left
        padding-bottom 0

        &>li
          margin-bottom 25px

      &__right
        padding-top 0
        
        &>li
          margin-bottom 15px