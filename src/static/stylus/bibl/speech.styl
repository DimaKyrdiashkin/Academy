.speech
  margin 120px 0 0

  & .subTitle
    margin 0 auto 90px
    text-align center
    max-width 800px

  &_box
    display flex
    justify-content space-between

    &__left
      display flex
      align-items center
      margin-right 40px
      max-width 500px
      width 50%

      &>img
        object-fit contain
        width 100%

    &__right
      max-width 590px
      width 50%

      & h5
        margin-bottom 28px

      & .blue
        color #5A74B7

      &-top
        margin-bottom 64px

      &-bottom
        &>p
          margin-bottom 20px

      &>a
        background $Purple
        font-weight 500
        display block
        padding 24px 36px
        text-align center
        border-radius 16px
        box-shadow 6px 9px 13px rgba(89, 85, 157, 0.33),
        0px 4px 6px rgba(89, 85, 157, 0.31)
        width fit-content
        margin-top 70px
        user-select none
        cursor pointer

@media all and (max-width 920px)
  .speech
    &_box
      &__left
        width 40%
    & h6
      max-width 100%
      text-align center

@media all and (max-width 768px)
  .speech
    margin 90px 0 0

    &_box
      flex-direction column
      align-items center

      &__left
        margin-right 0
        margin-bottom 40px

      &__right
        width 100%
        max-width 100%

        &>a
          margin 40px auto 0

@media all and (max-width 560px)
  .speech
    margin 90px 0 0

    &_box
      &__left
        width 70%

      &__right
        text-align center
        
@media all and (orientation landscape) and (max-width 850px)
  .speech
    margin 80px 0 0

    & .subTitle
      margin 0 auto 40px