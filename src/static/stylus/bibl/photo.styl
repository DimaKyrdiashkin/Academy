.photo
  &_box
    display flex
    flex-wrap wrap

    &__item
      width calc(33.33% - 13.3px)
      margin 0 20px 42px 0
      border-radius 16px
      overflow hidden
      cursor pointer
      user-select none

      &:nth-child(3n)
        margin-right 0

      &-top
        position relative

        & .cover
          width 100%
          object-fit contain
          display block
        
        & .icon
          position absolute
          left 24px
          top 24px

      &-bottom
        height 100%
        background $Gray
        padding 28px 24px

        & p
          color $DBlue
  
  &_button
    display flex
    justify-content center
    
    &>a
      background $Purple
      font-weight 500
      display block
      padding 24px 36px
      text-align center
      border-radius 16px
      box-shadow 6px 9px 13px rgba(89, 85, 157, 0.33),
      0px 4px 6px rgba(89, 85, 157, 0.31)
      width fit-content
      margin-top 50px
      user-select none
      cursor pointer

@media all and (max-width 920px)
  .photo
    &_box
      &__item
        width calc(50% - 20px)
        margin-right 40px

        &:nth-child(3n)
          margin-right 40px
        
        &:nth-child(2n)
          margin-right 0

@media all and (max-width 560px)
  .photo
    &_box
      flex-direction column

      &__item
        margin 0 20px 20px 0
        width 100%
        