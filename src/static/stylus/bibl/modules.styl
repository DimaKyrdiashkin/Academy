.modules
  margin 200px 0 80px

  &_box
    display flex
    flex-wrap wrap
    justify-content space-between
    
    &__item
      color $White
      padding 56px 44px 42px
      width calc(50% - 10px)
      margin 0 0 20px
      border-radius 16px
      cursor pointer
      user-select none
      position relative
      transition .4s

      &-head
        display flex
        justify-content space-between
        align-items center

        &>img
          transition .4s

      & h5
        color $White
        font-weight 500

      & p
        color $White

      &>img
        margin 0 auto 48px
        display block

      &:nth-child(1)
        background $DBlue

      &:nth-child(2)
        background $Yellow

      &:nth-child(3)
        background $Orange
        width 100%

      &:nth-child(4)
        background $Purple

      &:nth-child(5)
        background $LBlue

      &.open
        border-radius 16px 16px 0 0

        & .modules_box__item-head
          &>img
            transform rotate(180deg)
            transition .4s

        & .more
          opacity 1
          display block

      & .more
        display none
        margin-top 48px
        position absolute
        left 0
        bottom 0
        width 100%
        padding 0 44px 42px
        background inherit
        border-radius 0 0 16px 16px
        transform translateY(100%)
        z-index 1
        opacity 0

        & ul
          margin-bottom 44px
          
          &>li
            margin-bottom 12px
            display flex
            align-items center

            &::before
              content 'â€¢'
              display block
              margin-right 11px

            &:last-child
              margin-bottom 0

        & .hr
          background rgba(255, 255, 255, 0.2)
          width 100%
          height 1px
          display block
          margin-bottom 44px

        &_bottom
          display flex
          justify-content space-between
          align-items center

          &>span
            display block
            padding 16px 20px
            background rgba(255, 255, 255, 0.12)
            border-radius 8px
            cursor pointer

@media all and (max-width 920px)
  .modules
    margin 160px 0 60px

    &_box
      &__item
        width 100%

        &>img
          width 80%
          max-width 300px
          object-fit contain

@media all and (max-width 768px)
  .modules
    margin 180px 0 60px

    &_box
      &__item
        padding 34px

        & .more
          padding 0 34px 34px

@media all and (max-width 560px)
  .modules
    margin 150px 0 60px

    &_box
      &__item
        padding 16px 24px 24px

        & .more
          padding 0 24px 24px

        &>img
          max-width 200px

@media all and (orientation landscape) and (max-width 850px)
  .modules
    margin 150px 0 60px

    &_box
      &__item
        padding 24px 44px

        &>img
          max-width 200px